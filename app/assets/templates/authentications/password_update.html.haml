.authentication
  %form(ng-submit="updatePassword()" role="form" ng-init="passwordUpdateForm = {}" novalidate)
    %br
    #reset-password-header Reset Your Password
    %br
    %input(type="password" name="password" ng-model="passwordUpdate.password" placeholder="Password" required)
    %br
    %input(type="password" name="passwordConfirmation" ng-model="passwordUpdate.password_confirmation" placeholder="Confirm password" required)
    %br
    %button(type="submit" ng-disabled="passwordUpdateForm.$invalid") Save & Continue
    %br
