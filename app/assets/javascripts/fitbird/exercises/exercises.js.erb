module.config(['$stateProvider',
  function($stateProvider) {
    $stateProvider
      .state('exercises', {
        url: '/exercises',
        templateUrl: '<%= asset_path("exercises/list.html.haml") %>',
        controller: 'ExerciseListCtrl'
      })
      .state('exercises.detail', {
        url: '/:id',
        templateUrl: '<%= asset_path("exercises/detail.html.haml") %>',
        controller: 'ExerciseDetailCtrl'
      });
}]);
