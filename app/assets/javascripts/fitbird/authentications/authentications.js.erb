module.config(['$stateProvider',
  function($stateProvider) {
    $stateProvider
      .state('oauth', {
        url: '/oauth/:provider',
        template: '', // This controller has no template
        controller: 'OAuthCtrl'
      })
      .state('login', {
        url: '/login',
        templateUrl: '<%= asset_path("authentications/login.html.haml") %>',
        controller: 'LoginCtrl'
      })
      .state('logout', {
        url: '/logout',
        template: '', // This controller has no template
        controller: 'LogoutCtrl'
      })
      .state('passwordReset', {
        url: '/password_reset',
        templateUrl: '<%= asset_path("authentications/password_reset.html.haml") %>',
        controller: 'PasswordResetCtrl'
      })
      .state('passwordUpdate', {
        url: '/password_update',
        templateUrl: '<%= asset_path("authentications/password_update.html.haml") %>',
        controller: 'PasswordUpdateCtrl'
      });
}]);
